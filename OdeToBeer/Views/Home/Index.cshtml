@model IEnumerable<OdeToBeer.Models.Beer>
@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <h1>My Beer Blog</h1>
    <p class="lead">“Beer is proof that God loves us and wants us to be happy.” - Benjamin Franklin</p>
    <p>This is a sample application created by me to showcase my skills in ASP.NET MVC development. 
    You will find beer reviews, articles about beer, and my general thoughts about beer from a woman's perspective.</p>
    <p><a href="#" class="btn btn-primary btn-lg">Read more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-8">
        @foreach (var item in Model)
        {
            <div class="media">
                <div class="media-left">
                    <a href="#">
                        <img class="pull-left padding-right" src="http://placehold.it/100x100" alt="Placeholder">
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">@item.Name</h4>
                    Type: @item.Type<br />
                    Company: @item.CompanyId<br />
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                </div>
            </div>
            <hr />
        }
    </div>
    
</div>